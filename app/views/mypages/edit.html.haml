.form-wrap
  %h1.form-title--green
    Account Update
  = form_with model: @user, local: true do |f|
    .form-field
      = f.label :icon_image, "Icon", class: "icon-title"
      .form-field__description
        ※設定は任意です
      #myfile= f.file_field :icon_image, class: "input-file"
      %img#icon_image{style: "width:100px;height:100px;"}
    .form-field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", placeholder: 'PC・携帯どちらでも可'
    .form-field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "input-field", placeholder: '6文字以上'
    .form-field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field", placeholder: '6文字以上'
    .actions
      = f.submit "Update!", class: "form-submit__green"
  = render "share/navigation"