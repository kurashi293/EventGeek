.select-wrap
  %h1.form-title--green
    SELECT GROUP
  .select
  - current_user.groups.order(id: :desc).each do |group|
    = link_to group_path(group.id), class: "select-link" do
      .select-box
        .select-box__name
          = group.name
          .select-box__name--border
  %nav.gnav.fixed
    %ul
      %li
        = link_to "/", class: "link" do
          = icon "fas", "home", class: "nav-awesome"
          .compensate
            HOME
      %li
        = link_to user_path(current_user), class: "link" do
          = icon "fas", "user-cog", class: "nav-awesome"
          .compensate
            MY PAGE

